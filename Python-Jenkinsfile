pipeline {
    agent any
    
    environment {
        //once you create ACR in Azure cloud, use that here
        registryName = "pythonwebsite"
        //- update your credentials ID after creating credentials for connecting to ACR
        registryCredential = 'azure'
        //dockerImage = ''
        registryUrl = 'pythonwebsite.azurecr.io'
    }

    stages {
        stage('Pull') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'github-repos', url: 'https://github.com/nagithub18/myPythonDockerRepo.git']]])
                sh 'ls -R'
                
            }
        }
        stage('Build Image') {
            steps {
                script {
                    dockerImage = docker.build registryName
                }
            }
        }
        stage('Upload Image') {
            steps {
                script {
                    docker.withRegistry( "http://${registryUrl}", registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('stop previous containers') {
            steps {
                sh 'docker ps -f name=mypythonContainer -q | xargs --no-run-if-empty docker container stop'
                sh 'docker container ls -a -fname=mypythonContainer -q | xargs -r docker container rm'
            }
        }
        stage('Docker Run') {
            steps{
                script {
                    sh 'docker run -d -p 8096:5000 --rm --name mypythonContainer ${registryUrl}/${registryName}'
                }
            }
        }        
    }
}
